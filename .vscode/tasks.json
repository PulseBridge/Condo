{
  "version": "2.0.0",
  "windows": {
    "command": "condo.cmd",
    "args": [
      "-NoColor"
    ]
  },
  "linux": {
    "command": "./condo.sh",
    "args": [
      "--no-color"
    ]
  },
  "osx": {
    "command": "./condo.sh",
    "args": [
      "--no-color"
    ]
},
  "args": [],
  "taskSelector": "/t:",
  "tasks": [
    {
        "label": "compile",
        "type": "shell",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "build",
        "type": "shell",
        "problemMatcher": "$msCompile",
        "group": {
            "_id": "build",
            "isDefault": false
        }
    },
    {
        "label": "test",
        "type": "shell",
        "problemMatcher": "$msCompile",
        "group": {
            "_id": "test",
            "isDefault": false
        }
    },
    {
        "label": "publish",
        "type": "shell",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "debug",
        "type": "shell",
        "args": [
            "/p:CONDO_DEBUG=true"
        ],
        "problemMatcher": "$msCompile"
    }
]
}
