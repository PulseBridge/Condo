<Project>

  <PropertyGroup>
    <TargetFramework Condition=" '$(TargetFramework)' == '' AND '$(TargetFrameworks)' == '' ">netstandard2.0</TargetFramework>
    <DebugType>portable</DebugType>
    <CodeAnalysisRuleSet>$(MSBuildThisFileDirectory)stylecop.ruleset</CodeAnalysisRuleSet>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <AdditionalFiles Include="$(MSBuildThisFileDirectory)stylecop.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="StyleCop.Analyzers" Version="[1.0.2, 2.0.0)">
        <PrivateAssets>All</PrivateAssets>
    </PackageReference>

    <PackageReference Include="JetBrains.Annotations" Version="[11.1.0, 12.0.0)">
        <PrivateAssets>All</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

</Project>
