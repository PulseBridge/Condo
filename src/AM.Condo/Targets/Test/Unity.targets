<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Target Name="UnityTest" Condition=" $(UnityTest) ">
    <Exec Command="&quot;$(UnityPath)&quot; -projectPath &quot;@(UnityProjectPath)&quot; -batchmode -nographics -runEditorTests -editorTestsResultFile &quot;$(TestArtifactsRoot)results.xml&quot; -logFile -noUpm"
        WorkingDirectory="@(UnityProjectPath)" />
  </Target>

  <PropertyGroup>
    <TestDependsOn>
      $(TestDependsOn);
      UnityTest;
    </TestDependsOn>
  </PropertyGroup>
</Project>
