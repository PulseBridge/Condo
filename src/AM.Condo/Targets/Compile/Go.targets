<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Target Name="GoBuild" Condition=" !$(CI) AND $(GoBuild) ">

    <PropertyGroup>
      <GoBuildOptions Condition=" '$(GoBuildOptions)' == '' ">$(GO_BUILD_OPTIONS)</GoBuildOptions>
    </PropertyGroup>

    <!-- Build for local OS/Arch -->
    <Exec Command="&quot;$(GoPath)&quot; build -v -x -o $(BuildArtifactsRoot)$(Product)$(GoFileExtension) $(GoBuildOptions)"
      WorkingDirectory="$(GoProjectPath)"/>

  </Target>

  <PropertyGroup>
    <CompileDependsOn>
      $(CompileDependsOn)
      GoBuild;
    </CompileDependsOn>
  </PropertyGroup>

</Project>
