<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <RuntimeIdentifiers>osx-x64;win-x64;linux-x64</RuntimeIdentifiers>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="AM.Condo.tasks">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="Targets/**">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../AM.Condo.IO/AM.Condo.IO.csproj" />
    <ProjectReference Include="../AM.Condo.ChangeLog/AM.Condo.ChangeLog.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Dynamic.Runtime" Version="[4.3.0, 5.0.0)" />
    <PackageReference Include="System.IO.FileSystem" Version="[4.3.0, 5.0.0)" />
    <PackageReference Include="NuGet.Commands" Version="[4.4.0, 5.0.0)" />
    <PackageReference Include="NuGet.Packaging" Version="[4.4.0, 5.0.0)" />
    <PackageReference Include="NuGet.Versioning" Version="[4.4.0, 5.0.0)" />
    <PackageReference Include="Microsoft.Build" Version="[15.4.8, 16.0.0)" />
    <PackageReference Include="Microsoft.Build.Framework" Version="[15.4.8, 16.0.0)" />
    <PackageReference Include="Microsoft.Build.Tasks.Core" Version="[15.4.8, 16.0.0)" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="[15.4.8, 16.0.0)" />
  </ItemGroup>

</Project>
