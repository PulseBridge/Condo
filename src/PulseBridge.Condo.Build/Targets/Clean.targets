<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <Target Name="CleanArtifacts" BeforeTargets="Clean">
        <ItemGroup>
            <Artifacts Include="$(ArtifactsRoot)" />
        </ItemGroup>
        <RemoveDir Directories="@(Artifacts)" />
    </Target>

    <Target Name="CleanIntermediateArtifacts" BeforeTargets="Clean">
        <ItemGroup>
            <IntermediateArtifacts Include="%(Projects.ProjectDir)bin" />
            <IntermediateArtifacts Include="%(Projects.ProjectDir)obj" />
        </ItemGroup>
        <RemoveDir Directories="@(IntermediateArtifacts)" />
    </Target>
</Project>