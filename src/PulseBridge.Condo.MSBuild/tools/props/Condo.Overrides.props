<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <!-- disable documentation requirements for unit test projects -->
    <PropertyGroup Condition=" '$(TestProject)' == 'true' ">
        <DocumentationFile></DocumentationFile>
        <NoWarn>1591,$(NoWarn)</NoWarn>
        <CodeAnalysis>false</CodeAnalysis>
        <RunCodeAnalysis>false</RunCodeAnalysis>
        <TestProject>true</TestProject>
    </PropertyGroup>

    <PropertyGroup>
        <!-- disable warnings about assembly versions -->
        <NoWarn>2243,$(NoWarn)</NoWarn>

        <!-- force rebuild if this file changes -->
        <MSBuildAllProjects>$(MSBuildAllProjects);$(MSBuildThisFileFullPath)</MSBuildAllProjects>
    </PropertyGroup>
</Project>